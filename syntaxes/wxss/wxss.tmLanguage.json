{
  "name": "WXSS",
  "scopeName": "source.css.wxss",
  "fileTypes": ["wxss"],
  "uuid": "WXSS-2024-0001",
  "patterns": [
    {
      "include": "#comment-block"
    },
    {
      "include": "#selector"
    },
    {
      "include": "#property-list"
    },
    {
      "include": "#at-rule"
    },
    {
      "include": "#string-double"
    },
    {
      "include": "#string-single"
    }
  ],
  "repository": {
    "comment-block": {
      "name": "comment.block.css.wxss",
      "begin": "/\\*",
      "end": "\\*/",
      "captures": {
        "0": {
          "name": "punctuation.definition.comment.css.wxss"
        }
      }
    },
    "at-rule": {
      "name": "meta.at-rule.css.wxss",
      "begin": "\\s*((@)\\b(import|charset|namespace|media|supports|document|page|font-face|keyframes|-webkit-keyframes|-moz-keyframes)\\b)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.at-rule.css.wxss"
        },
        "2": {
          "name": "punctuation.definition.keyword.css.wxss"
        }
      },
      "end": "\\s*((?=;|\\{))",
      "patterns": [
        {
          "include": "#string-double"
        },
        {
          "include": "#string-single"
        }
      ]
    },
    "selector": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.class.css.wxss",
          "match": "\\.[a-zA-Z0-9_-]+"
        },
        {
          "name": "entity.other.attribute-name.id.css.wxss",
          "match": "#[a-zA-Z0-9_-]+"
        },
        {
          "name": "entity.name.tag.css.wxss",
          "match": "\\b(view|scroll-view|swiper|swiper-item|movable-view|movable-area|cover-view|cover-image|icon|text|rich-text|progress|button|checkbox|checkbox-group|form|input|label|picker|picker-view|picker-view-column|radio|radio-group|slider|switch|textarea|navigator|audio|image|video|camera|live-player|live-pusher|map|canvas|open-data|web-view|ad|official-account|page|page-meta|navigation-bar|custom-tab-bar)\\b"
        },
        {
          "name": "entity.other.attribute-name.pseudo-class.css.wxss",
          "match": ":(hover|active|focus|visited|link|first-child|last-child|nth-child|nth-of-type|not|before|after)\\b"
        },
        {
          "name": "entity.other.attribute-name.pseudo-element.css.wxss",
          "match": "::(before|after|first-letter|first-line|selection)\\b"
        }
      ]
    },
    "property-list": {
      "name": "meta.property-list.css.wxss",
      "begin": "\\{",
      "end": "\\}",
      "patterns": [
        {
          "include": "#comment-block"
        },
        {
          "include": "#property-name"
        },
        {
          "include": "#property-value"
        }
      ]
    },
    "property-name": {
      "name": "support.type.property-name.css.wxss",
      "match": "\\b(align-content|align-items|align-self|animation|animation-delay|animation-direction|animation-duration|animation-fill-mode|animation-iteration-count|animation-name|animation-play-state|animation-timing-function|backface-visibility|background|background-attachment|background-clip|background-color|background-image|background-origin|background-position|background-repeat|background-size|border|border-bottom|border-bottom-color|border-bottom-left-radius|border-bottom-right-radius|border-bottom-style|border-bottom-width|border-collapse|border-color|border-image|border-image-outset|border-image-repeat|border-image-slice|border-image-source|border-image-width|border-left|border-left-color|border-left-style|border-left-width|border-radius|border-right|border-right-color|border-right-style|border-right-width|border-spacing|border-style|border-top|border-top-color|border-top-left-radius|border-top-right-radius|border-top-style|border-top-width|border-width|bottom|box-shadow|box-sizing|caption-side|clear|clip|color|column-count|column-fill|column-gap|column-rule|column-rule-color|column-rule-style|column-rule-width|column-span|column-width|columns|content|counter-increment|counter-reset|cursor|direction|display|empty-cells|filter|flex|flex-basis|flex-direction|flex-flow|flex-grow|flex-shrink|flex-wrap|float|font|font-family|font-size|font-size-adjust|font-stretch|font-style|font-variant|font-weight|height|justify-content|left|letter-spacing|line-height|list-style|list-style-image|list-style-position|list-style-type|margin|margin-bottom|margin-left|margin-right|margin-top|max-height|max-width|min-height|min-width|opacity|order|outline|outline-color|outline-offset|outline-style|outline-width|overflow|overflow-x|overflow-y|padding|padding-bottom|padding-left|padding-right|padding-top|page-break-after|page-break-before|page-break-inside|perspective|perspective-origin|position|quotes|resize|right|tab-size|table-layout|text-align|text-align-last|text-decoration|text-decoration-color|text-decoration-line|text-decoration-style|text-indent|text-justify|text-overflow|text-shadow|text-transform|top|transform|transform-origin|transform-style|transition|transition-delay|transition-duration|transition-property|transition-timing-function|unicode-bidi|vertical-align|visibility|white-space|width|word-break|word-spacing|word-wrap|z-index)\\b"
    },
    "property-value": {
      "name": "meta.property-value.css.wxss",
      "begin": ":",
      "end": "\\s*(;|(?=\\}))",
      "patterns": [
        {
          "include": "#comment-block"
        },
        {
          "include": "#string-double"
        },
        {
          "include": "#string-single"
        },
        {
          "include": "#numeric-values"
        },
        {
          "include": "#color-values"
        },
        {
          "include": "#property-keywords"
        },
        {
          "include": "#function-call"
        }
      ]
    },
    "numeric-values": {
      "patterns": [
        {
          "name": "constant.numeric.css.wxss",
          "match": "[-+]?[0-9]*\\.?[0-9]+"
        },
        {
          "name": "keyword.other.unit.css.wxss",
          "match": "(?<=[0-9])(px|rpx|em|rem|%|vh|vw|vmin|vmax|cm|mm|in|pt|pc|ex|ch|deg|rad|grad|turn|s|ms|Hz|kHz|dpi|dpcm|dppx)"
        }
      ]
    },
    "color-values": {
      "patterns": [
        {
          "name": "constant.other.color.rgb-value.css.wxss",
          "match": "#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})\\b"
        },
        {
          "name": "support.constant.color.w3c-standard-color-name.css.wxss",
          "match": "\\b(aqua|black|blue|fuchsia|gray|green|lime|maroon|navy|olive|orange|purple|red|silver|teal|white|yellow|transparent)\\b"
        }
      ]
    },
    "property-keywords": {
      "name": "support.constant.property-value.css.wxss",
      "match": "\\b(absolute|all|alternate|alternate-reverse|auto|backwards|baseline|block|bold|bolder|border-box|both|bottom|break-word|capitalize|center|circle|collapse|column|column-reverse|contain|content-box|cover|dashed|dotted|double|ease|ease-in|ease-in-out|ease-out|ellipsis|fixed|flex|flex-end|flex-start|forwards|groove|hidden|inherit|initial|inline|inline-block|inline-flex|inset|inside|italic|justify|left|lighter|line-through|linear|lowercase|ltr|middle|none|normal|nowrap|oblique|outset|outside|overline|pointer|relative|repeat|repeat-x|repeat-y|reverse|ridge|right|row|row-reverse|rtl|scroll|solid|space-around|space-between|square|static|stretch|thick|thin|top|underline|uppercase|visible|wrap|wrap-reverse)\\b"
    },
    "function-call": {
      "name": "support.function.css.wxss",
      "begin": "\\b(rgb|rgba|hsl|hsla|url|calc|var|linear-gradient|radial-gradient|repeating-linear-gradient|repeating-radial-gradient|cubic-bezier|steps|translate|translateX|translateY|scale|scaleX|scaleY|rotate|skew|skewX|skewY|matrix)\\s*\\(",
      "end": "\\)",
      "patterns": [
        {
          "include": "#numeric-values"
        },
        {
          "include": "#string-double"
        },
        {
          "include": "#string-single"
        }
      ]
    },
    "string-double": {
      "name": "string.quoted.double.css.wxss",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.css.wxss",
          "match": "\\\\."
        }
      ]
    },
    "string-single": {
      "name": "string.quoted.single.css.wxss",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.css.wxss",
          "match": "\\\\."
        }
      ]
    }
  }
}

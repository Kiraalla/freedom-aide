{
  "name": "freedom-aide",
  "displayName": "自由的小助手",
  "description": "",
  "version": "0.0.5",
  "publisher": "kira0522",
  "icon": "./logo.jpg",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
		"onLanguage:wxml"
	],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.createMiniappTemplate",
        "title": "创建小程序组件"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.createMiniappTemplate",
          "when": "resourceScheme == 'file'",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/miniprogram-js.json"
      },
      {
        "language": "wxml",
        "path": "./snippets/miniprogram-wxml.json"
      }
    ],
    "keybindings": [
      {
        "command": "extension.formatwxml",
        "key": "shift+alt+f",
        "mac": "shift+alt+f",
        "when": "editorLangId == 'wxml' && editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "cny_js_beautify": "^0.0.8"
  }
}

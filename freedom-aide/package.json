{
  "name": "freedom-aide",
  "displayName": "自由の助手",
  "description": "",
  "version": "0.0.20",
  "publisher": "kira0522",
  "icon": "./logo.jpg",
  "engines": {
    "vscode": "^1.88.0"
  },
  "keywords": [
    "wxml",
    "小程序",
    "mini",
    "wechat",
    "weapp",
    "js",
    "jq",
    "vue",
    "vant",
    "layui"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.formatwxml",
    "onLanguage:wxml"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "wxml",
        "extensions": [
          ".wxml"
        ],
        "aliases": [
          "WXML",
          "wxml"
        ]
      },
      {
        "id": "pug",
        "aliases": [
          "jade"
        ]
      },
      {
        "id": "vue",
        "aliases": [
          "Vue",
          "vue"
        ],
        "extensions": [
          ".vue"
        ],
        "configuration": "./languages/vue-language-configuration.json"
      },
      {
        "id": "vue-html",
        "aliases": [
          "Vue-html"
        ],
        "configuration": "./languages/vue-html-language-configuration.json"
      },
      {
        "id": "vue-jade",
        "aliases": [
          "Vue-jade"
        ],
        "configuration": "./languages/vue-html-language-configuration.json"
      },
      {
        "id": "vue-pug",
        "aliases": [
          "Vue-pug"
        ],
        "configuration": "./languages/vue-html-language-configuration.json"
      },
      
      {
        "id": "vue-js",
        "aliases": [
          "Vue-js"
        ],
        "configuration": "./languages/vue-js-language-configuration.json"
      },
      {
        "id": "vue-postcss",
        "aliases": [
          "Vue-PostCSS",
          "Vue-POSTCSS",
          "vue-postcss"
        ],
        "configuration": "./languages/vue-postcss-language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "extension.createMiniappModule",
        "title": "创建小程序组件"
      },
      {
        "command": "extension.createMiniappPage",
        "title": "创建小程序页面"
      },
      {
        "command": "extension.createdHtml",
        "title": "创建HTML文件模板"
      },
      {
        "command": "extension.createdVue2",
        "title": "创建Vue2文件模板"
      },
      {
        "command": "extension.createdVue3",
        "title": "创建Vue3文件模板"
      },
      {
        "command": "extension.createdVuex",
        "title": "创建Vuex文件模板"
      },
      {
        "command": "extension.createdPinia",
        "title": "创建Pinia文件模板"
      },
      {
        "command": "extension.createdService",
        "title": "创建Service文件模板"
      },
      {
        "command": "extension.createdTools",
        "title": "创建Tools文件模板"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.createdHtml",
          "when": "resourceScheme == 'file'",
          "group": "1_creatTools"
        },
        {
          "command": "extension.createdVue2",
          "when": "resourceScheme == 'file'",
          "group": "1_creatTools"
        },
        {
          "command": "extension.createdVue3",
          "when": "resourceScheme == 'file'",
          "group": "1_creatTools"
        },
        {
          "command": "extension.createdPinia",
          "when": "resourceScheme == 'file'",
          "group": "2_creatTools"
        },
        {
          "command": "extension.createdVuex",
          "when": "resourceScheme == 'file'",
          "group": "2_creatTools"
        },
        {
          "command": "extension.createdService",
          "when": "resourceScheme == 'file'",
          "group": "2_creatTools"
        },
        {
          "command": "extension.createMiniappModule",
          "when": "resourceScheme == 'file'",
          "group": "3_creatTemplate"
        },
        {
          "command": "extension.createMiniappPage",
          "when": "resourceScheme == 'file'",
          "group": "3_creatTemplate"
        },
        {
          "command": "extension.createdTools",
          "when": "resourceScheme == 'file'",
          "group": "4_creatTools"
        }
      ]
    },
    "grammars": [
      {
        "language": "vue",
        "scopeName": "source.vue",
        "path": "./syntaxes/vue-generated.json",
        "embeddedLanguages": {
          "text.html.basic": "html",
          "text.html.vue-html": "vue-html",
          "text.jade.slm": "slm",
          "text.pug": "jade",
          "text.haml": "haml",
          "text.slim": "slim",
          "text.html.liquid": "liquid",
          "source.css": "css",
          "source.css.scss": [
            "scss",
            "css"
          ],
          "source.css.less": [
            "less",
            "css"
          ],
          "source.css.postcss": [
            "vue-postcss",
            "css"
          ],
          "source.sass": [
            "sass",
            "css"
          ],
          "source.stylus": "stylus",
          "source.js": [
            "javascript",
            "vue-js"
          ],
          "source.ts": [
            "typescript",
            "vue-js",
            "javascript"
          ],
          "source.coffee": "coffeescript",
          "text.html.markdown": "md",
          "source.yaml": "yaml",
          "source.json": "json",
          "source.php": "php",
          "source.graphql": "graphql"
        }
      },
      {
        "language": "vue-postcss",
        "scopeName": "source.css.postcss",
        "path": "./syntaxes/vue-postcss.json"
      },
      {
        "language": "vue-html",
        "scopeName": "text.html.vue-html",
        "path": "./syntaxes/vue-html.tmLanguage.json",
        "embeddedLanguages": {
          "source.js": "javascript"
        }
      },
      {
        "language": "vue-jade",
        "path": "./syntaxes/pug/directives.tmLanguage.json",
        "scopeName": "vue.pug.directives",
        "injectTo": [
          "source.vue"
        ]
      },
      {
        "language": "vue-pug",
        "path": "./syntaxes/pug/interpolations.tmLanguage.json",
        "scopeName": "vue.pug.interpolations",
        "injectTo": [
          "source.vue"
        ]
      }
    ],
    "snippets": [
      {
        "language": "css",
        "path": "./snippets/basic/css.json"
      },
      {
        "language": "css",
        "path": "./snippets/css.json"
      },
      {
        "language": "scss",
        "path": "./snippets/css.json"
      },
      {
        "language": "less",
        "path": "./snippets/css.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/js.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/jq.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/miniprogram-js.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/layui-jq.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/vant-js.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/basic/javascript.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/js.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/js.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/js.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/vue-js.json"
      },
      {
        "language": "json",
        "path": "./snippets/vant-json.json"
      },
      {
        "language": "wxml",
        "path": "./snippets/miniprogram-wxml.json"
      },
      {
        "language": "wxml",
        "path": "./snippets/vant-wxml.json"
      },
      {
        "language": "html",
        "path": "./snippets/layui-html.json"
      },
      {
        "language": "vue-html",
        "path": "./snippets/vant-html.json"
      },
      {
        "language": "html",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "html",
        "path": "./snippets/vue-html.json"
      },
      {
        "language": "html",
        "path": "./snippets/vue-html.json"
      },
      {
        "language": "vue-postcss",
        "path": "./snippets/css.json"
      },
      {
        "language": "vue-js",
        "path": "./snippets/vant-vue.json"
      },
      {
        "language": "vue-js",
        "path": "./snippets/vue-js.json"
      },
      {
        "language": "vue-js",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "vue-html",
        "path": "./snippets/basic/html.json"
      },
      {
        "language": "vue-html",
        "path": "./snippets/vue-html.json"
      },
      {
        "language": "pug",
        "path": "./snippets/pug.json"
      },
      {
        "language": "vue-pug",
        "path": "./snippets/pug.json"
      }
    ],
    "keybindings": [
      {
        "command": "extension.formatwxml",
        "key": "shift+alt+f",
        "mac": "shift+alt+f",
        "when": "editorLangId == 'wxml' && editorTextFocus"
      }
    ],
    "configuration": {
      "title": "freedom-aide",
      "properties": {
        "freedomAide.format": {
          "type": "object",
          "description": "wxml格式化的属性。无特殊说明的配置的属性可以这里看https://github.com/beautify-web/js-beautify",
          "default": {
            "brace_style": "collapse",
            "end_with_newline": false,
            "indent_char": "",
            "indent_handlebars": false,
            "indent_inner_html": false,
            "indent_scripts": "keep",
            "indent_size": 2,
            "indent_with_tabs": true,
            "max_preserve_newlines": 1,
            "wrap_attributes_count": 4,
            "unformatted": "['text']",
            "disable_automatic_closing_labels": false,
            "preserve_newlines": true,
            "wrap_attributes": "force-expand-multiline"
          }
        },
        "freedomAide.onSaveFormat": {
          "type": "boolean",
          "description": "是否开启保存自动格式化",
          "default": false
        },
        "freedomAide.activeDisable": {
          "type": "boolean",
          "description": "是否禁用高亮组件",
          "default": false
        },
        "freedomAide.activeColor": {
          "type": "object",
          "description": "高亮的颜色，可设置每个组件的自定义颜色, [tagName]:color",
          "default": {
            "color": "#e5c07b"
          }
        },
        "freedomAide.tagNoActiveArr": {
          "type": "array",
          "description": "高亮所忽略的组件数组",
          "default": [
            "view",
            "scroll-view",
            "swiper",
            "movable-view",
            "cover-view",
            "text",
            "icon",
            "progress",
            "rich-text",
            "button",
            "checkbox",
            "form",
            "input",
            "label",
            "picker",
            "picker-view",
            "radio",
            "slider",
            "switch",
            "textarea",
            "navigator",
            "functional-page-navigator",
            "image",
            "audio",
            "video",
            "map",
            "canvas",
            "ad",
            "official-account",
            "open-data",
            "web-vie"
          ]
        },
        "freedomAide.supportedLanguages": {
          "type": "array",
          "default": [
            "vue"
          ],
          "items": {
            "type": "string"
          },
          "description": "应使用扩展名的vscode语言名称列表"
        },
        "freedomAide.targetFileExtensions": {
          "type": "array",
          "default": [
            ".vue"
          ],
          "items": {
            "type": "string"
          },
          "description": "应尝试查找定义文件的扩展名列表。尝试这些扩展名的顺序是作为潜在文件名的进一步扩展名，也可以作为替代文件结尾，而不是现有的文件扩展名（如果可用）。"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",

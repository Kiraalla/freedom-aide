			"layer.confirm('确定要删除这条吗？', {",
			"    btn: ['删除','取消'] ",
			"}, function(){",
			"  ${1}",
			"}, function(){",
			" ",
			"});"
		],
		"description": "layer确认框"
	},
	"layer内容框": {
		"prefix": "lay-open",
		"body": [
			"layer.open({",
			"  type: ${1|1,2,3,4|},//1 dom或文本，2 iframe,3 加载层,4 tips",
			"  shadeClose:true,",
			"  title:'${2:温馨提示}',",
			"  area: ['500px', '300px'],",
			"  content: \\$('#id') ,",
			"  success: function(layero){",
			"       $3",
			"   }",
			"});"
		],
